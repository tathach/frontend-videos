# MongoDB connection string
MONGO_URL=mongodb://localhost:27017/your-db-name

# Redis connection string (use the same URL for all PM2 instances)
REDIS_URL=redis://localhost:6379

# Session secret for express-session
SESSION_SECRET=change_this_secret
BACKUP_PASSWORD=your-backup-password

# Cloudflare R2 storage credentials
R2_ACCESS_KEY=your-r2-access-key
R2_SECRET_KEY=your-r2-secret-key
R2_ENDPOINT=https://r2.example.com
R2_BUCKET=your-r2-bucket
R2_CUSTOM_DOMAIN=https://cdn.example.com

# Cloudflare API details
CF_ACCOUNT_ID=your-cloudflare-account-id
CF_API_TOKEN=your-cloudflare-api-token

# Telegram bot configuration
TELEGRAM_BOT_TOKEN=your-telegram-token
CHAT_ID_NOTI=your-chat-id

# Application environment
NODE_ENV=development

# S3/MinIO credentials
MINIO_ENDPOINT=s3.example.com
MINIO_PORT=9000
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET=your-minio-bucket
MP4_BUCKET=your-mp4-bucket
MINIO_PUBLIC_URL=https://cdn.example.com

# Timeout for long uploads (in minutes)
# Increase this value when uploading very large files over slow connections
# 720 minutes = 12 hours
SERVER_TIMEOUT_MINUTES=720

